{
  "name": "storytotest",
  "displayName": "storytotest",
  "description": "Generate test suits from user stories by analyzing Typescript codebases",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:storytotest.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "storytotest.helloWorld",
        "title": "StoryToTest: Generate Tests from User Stories"
      }
    ],
    "configuration": {
      "title": "StoryToTest",
      "properties": {
        "storytotest.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for test generation",
          "markdownDescription": "Your OpenAI API key. Get one at https://platform.openai.com/api-keys"
        },
        "storytotest.model": {
          "type": "string",
          "default": "gpt-4-turbo",
          "enum": [
            "gpt-4-turbo",
            "gpt-4o",
            "gpt-4"
          ],
          "description": "OpenAI model to use for test generation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.10",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "openai": "^6.19.0",
    "ts-morph": "^27.0.2"
  }
}
